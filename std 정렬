#include <iostream>
#include <vector>
#include <algorithm>

int main() {
    std::vector<int> numbers = {5, 2, 9, 1, 7};

    std::sort(numbers.begin(), numbers.end());

    std::cout << "정렬 후: ";
    for (int n : numbers) std::cout << n << " ";
    std::cout << std::endl;

    std::sort(numbers.rbegin(), numbers.rend()); 
    std::cout << "내림차순 정렬: ";
    for (int n : numbers) std::cout << n << " ";
    std::cout << std::endl;

    return 0;
}
